@model IEnumerable<Producer>

@{
    ViewData["Title"] = "List of Producers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle" style="width: 150px;">
                            <img class="rounded-circle" alt="@item.FullName" src="@item.ProfilePictureURL" style="max-width: 100px;" />
                        </td>
                        <td class="align-middle" style="width: 350px;">@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td class="align-middle" style="width: 500px;">@Html.DisplayFor(modelItem => item.Bio)</td>
                        <td class="align-middle">
                            <div style="display: flex; gap: .4em;">
                                <a title="Edit" class="btn-updt-sm btn-updt-app"><i class="bi bi-pencil-square"></i> </a>
                                <a title="Preview" class="btn-updt-sm btn-updt-warning btn-updt-app-warning"><i class="bi bi-eye"></i> </a>
                                <a title="Delete" class="btn-updt-sm btn-updt-danger btn-updt-app-danger"><i class="bi bi-trash"></i> </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>