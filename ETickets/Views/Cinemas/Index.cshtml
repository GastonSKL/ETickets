@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "List of Cinemas";
}

<div  class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle" style="width: 150px;">
                            <img alt="@item.Name" src="@item.Logo" style="max-width: 100px;"/>
                        </td>
                        <td class="align-middle" style="width: 350px;">@Html.DisplayFor(Model => item.Name)</td>
                        <td class="align-middle" style="width: 500px;">@Html.DisplayFor(Model => item.Description)</td>
                        <td class="align-middle">
                            <div style="display: flex; gap: .4em;">
                                <a title="Edit" class="btn-updt-sm btn-updt-app"><i class="bi bi-pencil-square"></i> </a>
                                <a title="Delete" class="btn-updt-sm btn-updt-danger btn-updt-app-danger"><i class="bi bi-trash"></i> </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
