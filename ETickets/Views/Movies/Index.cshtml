@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="row">
    <div class="col-sm-10 offset-sm-2 movie-container" >
    @foreach(var item in Model)
    {

            <div class="movie-item">
                <div class="movie-left">
                    <div class="movie-left-container">
                        <img src="@item.ImageUrl" alt="@item.Name" class="movie-left-container-img" />
                        <h2 class="movie-left-container-title">
                            @Html.DisplayFor(model => item.Name)
                        </h2>
                        <a class="movie-left-container-link"> <i class="bi bi-pencil-square"></i></a>
                    </div>
                    <div class="movie-left-description">
                        <p >@item.Description</p>
                    </div>
                </div>
                <div class="movie-right">
                    <div class="movie-right-text">
                        <div><b>Cinema</b></div>
                        <div>@item.Cinema</div>
                    </div>
                    <div class="movie-right-text">
                        <div><b>Category</b></div>
                        <div>@item.MovieCategory</div>
                    </div>
                    <div class="movie-right-text">
                        <div><b>Start Date</b></div>
                        <div>@item.StartDate</div>
                    </div>
                    <div class="movie-right-text">
                        <div><b>End Date</b></div>
                        <div>@item.EndDate</div>
                    </div>
                    <div class="movie-right-text">
                        <div><b>Status</b></div>
                        <div>
                            @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                            {
                                <span class="badge bg-success text-white">AVAILABLE</span>
                            }
                            else
                            {
                                <span class="badge bg-primary text-white">UPCOMING</span>
                            }
                        </div>
                    </div>
                    <div class="movie-right-buttons">
                        <button class="btn btn-primary"><i class="bi bi-eye-fill"></i> </button>
                        <button class="btn btn-secondary "><i class="bi bi-cart-plus"></i> ($@item.Price)</button>
                    </div>
                </div>
            </div>
    }
        </div>
